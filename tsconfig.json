{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": false,
    "declaration": false,

    "rootDir": "src",
    "outDir": "dist"
  }
}
